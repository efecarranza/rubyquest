<h1><p><div id="h1-size">Forum</div>
<%= link_to "New Post", new_post_path, class: "ruby-btn" %>
</p>
<br/>
<table class= "forum-table">
	<tr>
		<th class= "forum-post">Post</th>
	<!-- 	<th class= "forum-views">Views</th> -->
		<th class= "post-replies">Replies</th>
		<th colspan="3"></th>
	</tr>

	<% @posts.each do |post| %>
	<tr>
		<td><%= link_to post.title, post, class: 'post-link' %><p class="publish">Published by <%= post.user.username %> <%= time_ago_in_words(post.created_at) %> ago.</p></td>
	<!-- 	<td><%= puts 'this is where post view count goes' %></td> -->
		<td><%= post.comments.count %></td>
	</tr>
<% end %>
</table>
</h1>

