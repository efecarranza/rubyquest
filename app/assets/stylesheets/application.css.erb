body {
   font-family: 'Monda', sans-serif;
   font-weight: 700;
   font-style: normal;
   font-size: 14px;
   background-color: #d1d1d1; /* 2e2e2e for very dark instead */
   background-image: url('<%= asset_path('shards-mg.png') %>');
   color:#000000;
 }

h1 {
	background-color: #D32F2F;
	color: #fff;
	padding: 5px;
	border-style: groove;
	border-width: 2px;
	border-color: #330000;
	border-radius: 5px;
	font-size: 30px;
}

#h1-size {
	color: #fff;
	display: inline-block;
	font-size: 30px;
}

form {
	padding: 5px;
	background-color: #D32F2F;
	color: #fff;
}

h2 {
	border-style: groove;
	border-width: 3px;
	border-color: #330000;
	border-radius: 5px;
	font-size: 30px;
}

form {
	border-style: groove;
	border-width: 3px;
	border-color: #330000;
	border-radius: 5px;
	font-size: 12px;
	vertical-align: text-bottom;
	color: black;
}

.nav a:first-child {
  margin-left: 20px;
}

/* regular link */
.ruby-btn {
	padding: 5px;
	border-style: groove;
	border-width: 2px;
	border-color: #FFF;
	border-radius: 5px;
	font-size: 12px;
	color: #FFF;
	background-color: #202020;
	text-decoration: none;
}

/* mouse over */
.ruby-btn:hover {
	padding: 5px;
	border-style: groove;
	border-width: 2px;
	border-color: #FFF;
	border-radius: 5px;
	font-size: 12px;
	color: #FFF;
	background-color: #D32F2F;
	text-decoration: none;
}

/* pressed */
.ruby-btn:active {
	padding: 5px;
	border-style: groove;
	border-width: 2px;
	border-color: #FF0000;
	border-radius: 5px;
	font-size: 12px;
	color: #FF0000;
	background-color: #FFF;

}

.noselect {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

a {
    outline: none, !important;
}

.btn:focus, .btn:active:focus, .btn.active:focus {
    outline: 0 none;
}

.nav {
  position: -webkit-sticky;
  top: 0px;
  z-index: 1;
  padding: 15px 0;
  background-color: #D32F2F;
  left: 50px;
  color:#fff;
  padding-right: 10px;
  padding-left: 10px;
  box-shadow: 2px 2px 3px 3px #202020;
}

.sticky {
  position: fixed;
  width: 100%;
  z-index: 100;
}

.form_for {
  left: 20px;
}

.rq-logo-pixeled {
	width: 350px;
}

.ruby-btn:active {
	width: 350px;
}

.alert {
	display: inline-block;
	padding-top: 0px;
	margin-top: 0px;
	font-size: 12px;
}

.notice {
	display: inline-block;
	padding-top: 0px;
	margin-top: 0px;
	font-size: 12px;
}



